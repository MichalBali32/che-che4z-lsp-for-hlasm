{
  "name": "hlasm-language-support",
  "displayName": "HLASM Language Support",
  "description": "Code completion, highlighting, browsing and validation for High Level Assembler.",
  "version": "0.11.0",
  "license": "EPL-2.0",
  "author": "Broadcom",
  "publisher": "BroadcomMFD",
  "homepage": "https://github.com/eclipse/che-che4z-lsp-for-hlasm",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "HLASM",
    "LSP",
    "Assembler",
    "Mainframe",
    "z/OS",
    "zos",
    "zowe",
    "ibm assembler"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "resources/logo.png",
  "main": "./lib/extension.js",
  "typings": "./lib/extension",
  "engines": {
    "vscode": "^1.32.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse/che-che4z-lsp-for-hlasm.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse/che-che4z-lsp-for-hlasm/issues"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^7.0.2",
    "@types/vscode": "^1.32.3",
    "conventional-changelog-conventionalcommits": "^4.3.0",
    "decache": "^4.5.1",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "puppeteer": "^4.0.0",
    "semantic-release": "^17.0.7",
    "shelljs": "^0.8.2",
    "shx": "^0.3.2",
    "typescript": "^3.5.3",
    "vsce": "^1.52.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "7.0.0-next.8"
  },
  "scripts": {
    "postinstall": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "clean": "node ./build/bin/clean.js",
    "package": "vsce package",
    "test": "npm run compile && node ./build/bin/prepareWorkspace.js && node ./lib/test/runTest.js",
    "test:insiders": "npm run compile && node ./build/bin/prepareWorkspace.js && node ./lib/test/runTest.js insiders"
  },
  "contributes": {
    "colors": [
      {
        "id": "hlasm.instruction",
        "description": "Color for HLASM instructions",
        "defaults": {
          "dark": "#F44747",
          "light": "#CD3131",
          "highContrast": "#F44747"
        }
      },
      {
        "id": "hlasm.comment",
        "description": "Color for comments",
        "defaults": {
          "dark": "#6A9955",
          "light": "#008000",
          "highContrast": "#7CA668"
        }
      },
      {
        "id": "hlasm.ignored",
        "description": "Color for ignored characters",
        "defaults": {
          "dark": "#B267E6",
          "light": "#800080",
          "highContrast": "#B267E6"
        }
      },
      {
        "id": "hlasm.continuation",
        "description": "Color for continuation characters",
        "defaults": {
          "dark": "#5fffff",
          "light": "#5fffff",
          "highContrast": "#5fffff"
        }
      },
      {
        "id": "hlasm.data_def_type",
        "description": "Color for data definition type character",
        "defaults": {
          "dark": "#6699ff",
          "light": "#6699ff",
          "highContrast": "#6699ff"
        }
      },
      {
        "id": "hlasm.data_def_extension",
        "description": "Color for data definition type extension character",
        "defaults": {
          "dark": "#6699AA",
          "light": "#6699AA",
          "highContrast": "#6699AA"
        }
      },
      {
        "id": "hlasm.remark",
        "description": "Color for remarks",
        "defaults": {
          "dark": "#06aed8",
          "light": "#06aed8",
          "highContrast": "#06aed8"
        }
      },
      {
        "id": "hlasm.varSymbol",
        "description": "Color for variable symbols",
        "defaults": {
          "dark": "#ee4f7c",
          "light": "#ee4f7c",
          "highContrast": "#ee4f7c"
        }
      },
      {
        "id": "hlasm.string",
        "description": "Color for strings",
        "defaults": {
          "dark": "#CE9178",
          "light": "#A31515",
          "highContrast": "#CE9178"
        }
      },
      {
        "id": "hlasm.number",
        "description": "Color for numbers",
        "defaults": {
          "dark": "#2a397a",
          "light": "#2a397a",
          "highContrast": "#2a397a"
        }
      },
      {
        "id": "hlasm.seqSymbol",
        "description": "Color for sequence symbols",
        "defaults": {
          "dark": "#8b7d6b",
          "light": "#8b7d6b",
          "highContrast": "#8b7d6b"
        }
      },
      {
        "id": "hlasm.label",
        "description": "Color for labels",
        "defaults": {
          "dark": "#ffff00",
          "light": "#ffff00",
          "highContrast": "#ffff00"
        }
      },
      {
        "id": "hlasm.operator",
        "description": "Color for operators",
        "defaults": {
          "dark": "#D4D4D4",
          "light": "#000000",
          "highContrast": "#D4D4D4"
        }
      },
      {
        "id": "hlasm.operand",
        "description": "Color for operands",
        "defaults": {
          "dark": "#797979",
          "light": "#797979",
          "highContrast": "#797979"
        }
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "pgm_conf.json",
        "url": "./pgm_conf_schema"
      },
      {
        "fileMatch": "proc_grps.json",
        "url": "./proc_grps_schema"
      }
    ],
    "breakpoints": [
      {
        "language": "hlasm"
      }
    ],
    "debuggers": [
      {
        "type": "hlasm",
        "label": "HLASM Macro tracer",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "hlasm",
            "request": "launch",
            "name": "Macro tracer: current program",
            "program": "${command:extension.hlasm-plugin.getCurrentProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "HLASM Macro tracer: Launch current program",
            "description": "A new configuration for tracing HLASM file that is currently open.",
            "body": {
              "type": "hlasm",
              "request": "launch",
              "name": "Macro tracer: current program",
              "program": "^\"\\${command:extension.hlasm-plugin.getCurrentProgramName}\"",
              "stopOnEntry": true
            }
          },
          {
            "label": "HLASM Macro tracer: Ask for file name",
            "description": "A new configuration for tracing a user selected HLASM file.",
            "body": {
              "type": "hlasm",
              "request": "launch",
              "name": "Macro tracer: Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:extension.hlasm-plugin.getProgramName}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "hlasm",
        "extensions": [
          ".hlasm"
        ],
        "aliases": [
          "HLASM"
        ],
        "configuration": "./language-configuration.json",
        "filenames": [],
        "firstLine": " *MACRO *"
      }
    ],
    "configurationDefaults": {
      "[hlasm]": {
        "editor.rulers": [
          72
        ],
        "editor.wordBasedSuggestions": false
      }
    },
    "commands": [
      {
        "command": "insertContinuation",
        "category": "HLASM",
        "title": "Insert Continuation"
      },
      {
        "command": "removeContinuation",
        "category": "HLASM",
        "title": "Remove Continuation"
      }
    ],
    "keybindings": [
      {
        "command": "insertContinuation",
        "key": "shift+alt+enter",
        "when": "editorLangId == hlasm && editorTextFocus && !editorReadonly"
      },
      {
        "command": "removeContinuation",
        "key": "shift+alt+backspace",
        "when": "editorLangId == hlasm && editorTextFocus && !editorReadonly"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "hlasmplugin configuration",
      "properties": {
        "hlasm.arguments": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Arguments for hlasmplugin server"
        },
        "hlasm.syncFileEvents": {
          "type": "boolean",
          "default": true,
          "description": "Whether or not to send file events to hlasmplugin (File created, changed or deleted). This can be disabled for performance consideration."
        },
        "hlasm.continuationHandling": {
          "type": "boolean",
          "default": false,
          "description": "Disable in case you experience lags when typing. Note: Extension will be restarted upon changing this option."
        }
      }
    }
  }
}
